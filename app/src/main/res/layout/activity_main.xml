<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.mytimerapp.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STOPWATCH"
        android:id="@+id/stopwatchButton_ID"
        android:layout_marginTop="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="goToStopwatch" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGULAR TIMER"
        android:id="@+id/regularTimerButton_ID"
        android:layout_below="@+id/stopwatchButton_ID"
        android:layout_alignStart="@+id/stopwatchButton_ID"
        android:onClick="goToRegularTimer" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CAMERA TIMER"
        android:id="@+id/cameraTimerButton_ID"
        android:layout_below="@+id/regularTimerButton_ID"
        android:layout_alignStart="@+id/regularTimerButton_ID"
        android:onClick="goToCameraTimer" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PHONE TIMER"
        android:id="@+id/phoneTimerButton_ID"
        android:layout_below="@+id/cameraTimerButton_ID"
        android:layout_alignStart="@+id/regularTimerButton_ID"
        android:onClick="goToPhoneTimer" />
</RelativeLayout>
